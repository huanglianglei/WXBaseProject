.container {
  display: flex;
  flex-direction: column;
}
.container swiper {
  width: 100%;
  height: 460rpx;
}
.container image {
  width: 100%;
  height: 100%;
}
.post-view {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee;
}
.post-view .post-user {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx;
}
.post-view .post-user image {
  width: 60rpx;
  height: 60rpx;
}
.post-view .post-user text {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 20rpx;
}
.post-view .post-title {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}
.post-view .post-image {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
}
.post-view .post-content {
  margin: 20rpx;
  font-size: 28rpx;
  color: #333;
}
